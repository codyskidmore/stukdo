<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title, required: true, autofocus: true, label: false, placeholder: "Title", input_html: {class: "form-control"} %>
    <%= f.input :content, required: true, label: false, placeholder: "Description", input_html: {class: "form-control"} %>

    <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>
